<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="tagData"
            type="com.andy.infrastructure.demos.view.TagData"/>
    </data>

    <CheckBox
        android:id="@+id/tagLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tag text"
        android:button="@null"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:checked="@{tagData.selected}"
        tools:checked="false"
        android:background="@drawable/tag_state_bg"
        android:textColor="@color/tag_text_color"/>

</layout>